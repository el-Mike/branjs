{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"],
      "@common/*": ["src/common/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
